<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_rater"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RatingBar
        android:id="@+id/stars"
        android:numStars="5"
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressDrawable="@android:drawable/star_big_on"
        android:layout_toRightOf="@id/img_rater" />

    <TextView
        android:id="@+id/txt_rating_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="@color/black_translucent"
        android:layout_below="@id/stars"
        android:maxLines="5" />

    <TextView
        android:id="@+id/txt_rate_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rating_comment"
        android:textColor="@color/tradesiesColorSecondaryDark"
        android:gravity="right"
        android:maxLines="5" />
</RelativeLayout>